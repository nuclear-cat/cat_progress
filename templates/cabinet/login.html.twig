{% extends 'cabinet/auth_base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block header %}
    <h1 class="h3 mb-3 font-weight-normal text-center">Please log in</h1>
{% endblock %}

{% block content %}
    <form method="post">
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a
                        href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <div class="mb-4">
            <label class="mb-2" for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                   class="form-control"
                   autocomplete="email" required autofocus>
        </div>
        <div class="mb-4">
            <label class="mb-2" for="inputPassword">Password</label>

            <input type="password" name="password" id="inputPassword" class="form-control"
                   autocomplete="current-password" required>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3 d-flex justify-content-between">
            <label>
                <input type="checkbox" checked name="_remember_me"> Remember me
            </label>
            <div>
                <a href="{{ path('cabinet.reset_password') }}">Forgot your password?</a>
            </div>
        </div>

        <button class="btn btn-lg col-12 btn-primary" type="submit">
            Login
        </button>
    </form>
    <div class="mt-3 text-center">
        <div class="card p-4">
            <p class="mb-0">New to CatProgress? <a href="{{ path('cabinet.register') }}">Create an
                    account.</a></p>
        </div>
    </div>

{% endblock %}
