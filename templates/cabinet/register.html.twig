{% extends 'cabinet/auth_base.html.twig' %}
{% block top %}
    <h1 class="mt-0 mb-3 text-center">Create your account</h1>
{% endblock %}

{% block content %}
    {{ form_start(form) }}

    <div class="form-group mb-3">
        {{ form_label(form.name, null, { attr: { class: 'mb-2' } }) }}
        {{ form_widget(form.name) }}
    </div>

    <div class="form-group mb-3">

        {{ form_label(form.email, null, { attr: { class: 'mb-2' } }) }}
        {{ form_widget(form.email) }}
    </div>

    <div class="form-group mb-3">
        {{ form_label(form.password, null, {attr: { class: 'mb-2' }}) }}
        {{ form_widget(form.password) }}
    </div>

    {{ form_row(form.timezone) }}

    {{ form_widget(form.submit, { attr: { class: 'btn btn-primary btn-block btn-lg col-12', } }) }}
    {{ form_end(form) }}

    <div class="mt-3 text-center">
        <div class="card p-4">
            <div>Already have account? <a href="{{ path('cabinet.login') }}">Login</a></div>
        </div>
    </div>

{% endblock %}
{% block bottom_js %}
    {{ parent() }}
    <script>
        document.getElementById('{{ form.timezone.vars.id }}').value = Intl.DateTimeFormat().resolvedOptions().timeZone;
    </script>
{% endblock %}